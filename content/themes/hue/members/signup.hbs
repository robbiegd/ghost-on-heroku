{{!< ../default}}

<div class='o-wrapper'>
  {{#if @member.paid}}
    {{!-- Logged in, paying member: Redirect home --}}
    <script>window.location = '{{@site.url}}';</script>

  {{else if @member}}
    <div class='c-archive'>
      <div class='o-grid'>
        <div class='o-grid__col o-grid__col--center o-grid__col--4-4-s o-grid__col--3-4-m o-grid__col--2-4-l'>
          <h2 class='c-archive__title'>{{t 'Choose your subscription'}}</h2>
          <p class='c-archive__description'>{{t 'Unlock full access to {siteTitle} and see the entire library of members-only content & updates.' siteTitle=@site.title}}</p>
        </div>
      </div>

      <div class='o-grid'>
        <div class='o-grid__col o-grid__col--center o-grid__col--4-4-m'>
          {{> signup-plans }}
        </div>
      </div>
    </div>
  {{else}}
    {{!-- Not logged in: Sign up --}}
    <div class='c-archive'>
      <div class='o-grid'>
        <div class='o-grid__col o-grid__col--center o-grid__col--4-4-s o-grid__col--3-4-m o-grid__col--2-4-l'>
          <h2 class='c-archive__title'>{{t 'Sign Up to {siteTitle}' siteTitle=@site.title}}</h2>
          <p class='c-archive__description'>{{t 'Get access to premium content.'}}</p>
        </div>
      </div>

      <div class='o-grid'>
        <div class='o-grid__col o-grid__col--center o-grid__col--4-4-s o-grid__col--3-4-m o-grid__col--2-4-l'>
          <form data-members-form='signup' class='c-subscribe-form c-subscribe-form--center'>
            <div class='form-group'>
              <label for='subscribe-email' class='u-hidden-visually'>{{t 'Your email' }}</label>
              <input type='email' name='email' class='c-subscribe-form__input' id='subscribe-email' placeholder='{{t 'Your email address' }}' data-members-email autocomplete='false'>
              <button type='submit' class='c-btn c-btn--action c-subscribe-form__btn'>{{t 'Continue' }}</button>
            </div>

            <div class='u-alert u-text-center u-alert--success u-mt-16'>{{t 'Please check your inbox and click the link to confirm your subscription.' }}</div>
            <div class='u-alert u-text-center u-alert--invalid u-mt-16'>{{t 'Please enter a valid email address!' }}</div>
            <div class='u-alert u-text-center u-alert--error u-mt-16'>{{t 'An error occurred, please try again later.' }}</div>
          </form>
          <p class='u-type-xs u-text-center u-mt-16'>{{t 'Already have an account?' }} <a href='/signin/' class='u-link'>{{t 'Log In' }}</a></p>
        </div>
      </div>
    </div>
  {{/if}}
</div>