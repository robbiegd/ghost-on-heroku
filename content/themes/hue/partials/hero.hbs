<div class='c-hero'>
  <div class='o-grid c-hero__inner'>
    <div class='o-grid__col o-grid__col--4-4-s o-grid__col--2-4-m'>
      <div class='c-hero__content'>
        <div class='c-hero__description'>
          {{{ @site.description }}}
        </div>

        {{> subscribe-list}}

        {{#if @labs.members}}
          {{#unless @member}}
            {{> hero-subscribe-form}}
          {{/unless}}
        {{/if}}
      </div>
    </div>
    {{#if @site.cover_image}}
      <div class='o-grid__col o-grid__col--4-4-s o-grid__col--2-4-m'>
        <img class='c-hero-image lazyload' data-src='{{ @site.cover_image }}' alt='{{ @site.title }}'>
      </div>
    {{/if}}
  </div>
</div>