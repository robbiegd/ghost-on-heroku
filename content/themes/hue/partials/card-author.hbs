<div class='o-grid__col o-grid__col--4-4-s o-grid__col--2-4-m o-grid__col--1-3-l c-card-author-wrap'>
  <a class='c-card-author' href='{{ url }}'>
    <div class='c-card-author__media'>
      <img src='{{ profile_image }}' alt='{{ name }}' class='c-card-author__image'>
    </div>

    <div class='c-card-author__content'>
      <h3 class='c-card-author__name'>{{ name }}</h3>
      <p class='c-card-author__bio'>{{ bio }}</p>
    </div>
  </a>
</div>