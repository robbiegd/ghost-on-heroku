<!DOCTYPE html>
<html lang="{{@site.lang}}">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<title>{{@site.title}} â€” {{statusCode}}</title>
		<meta name="HandheldFriendly" content="True">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		{{>services/google_fonts}}
		<link rel="stylesheet" type="text/css" href="{{asset "css/screen.css"}}">
	</head>
	<body class="custom-error{{#get "tags" limit="all" filter="visibility:internal" as |tags|}}{{#tags}} global-{{slug}}{{/tags}}{{/get}}">
		{{#if @site.cover_image}}
		<div class="global-cover global-bg-image" style="background-image: url({{@site.cover_image}})"></div>
		{{/if}}
		<div class="custom-wrap global-flex">
			<div class="custom-flex global-flex">
				<div class="custom-header">
					<a href="{{@site.url}}" class="custom-heading global-heading">{{>icons/site/arrow}}{{t "Back to Homepage"}}</a>
				</div>
				<div class="custom-content global-flex">
					<div class="error-message">
						<h1>{{statusCode}}</h1>
						<h3>{{message}}</h3>
						<a href="{{@site.url}}" class="global-button">{{t "Back to Homepage"}}</a>
					</div>
				</div>
				{{#if @site.description}}
				<div class="custom-footer">
					<a href="{{@site.url}}">{{@site.title}}.</a>
					<span>{{@site.description}}.</span>
				</div>
				{{/if}}
			</div>
		</div>
		<script>
		window.addEventListener("load", function() {
			const body = document.body;
			body.classList.add("is-loaded")
		})
		</script>
	</body>
</html>