<footer class="footer-section global-footer global-section{{#if @labs.members}}{{^if @member}} is-subscribe{{/if}}{{/if}}">
	<div class="footer-wrap global-wrap global-flex">
		<div class="footer-nav">
			<nav>
				<ul>
					{{#if @site.secondary_navigation}}
					{{navigation type="secondary"}}
					{{else}}
					{{navigation}}
					{{/if}}
				</ul>
			</nav>
		</div>
		<div class="footer-icons global-flex">
			{{#if @site.facebook}}
			<a href="{{facebook_url}}" aria-label="link Facebook">{{>icons/social/facebook}}</a>
			{{/if}}
			{{#if @site.twitter}}
			<a href="{{twitter_url}}" aria-label="link Twitter">{{>icons/social/twitter}}</a>
			{{/if}}
			{{>footer_icons}}
		</div>
		<div class="footer-copyright">
			<a href="{{@site.url}}">{{@site.title}}</a> &copy; {{date format="YYYY"}} â€” {{t "All Right Reserved"}}.
			{{{t "Published with {ghost_site}" ghost_site="<a href=\"https://ghost.org\">Ghost</a>"}}}.
		</div>
	</div>
</footer>